<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gagankaushal.portfolio">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".Splash">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".Home"/>
        <activity android:name=".Login"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Registration"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AndroidDatabaseManager"/>
        <activity android:name=".Rating"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Dashboard"
        android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ProjectManagement"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddProject"
            android:windowSoftInputMode="stateHidden"/>
<activity android:name=".UserManagement"
    android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddUser"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".UserUpdate"
            android:windowSoftInputMode="stateHidden"/>
<activity android:name=".Contact_management"
    android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Add_Contact"
        android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Update_Contact_Us"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Rate_Management"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Add_Rate"
            android:windowSoftInputMode="stateHidden"/>

    </application>
</manifest>
